@model SurveyViewModel
@if (Model != null)
{
    <div class="card">
        <div class="card-body">
            <h5 id="courseName">Tên khóa học: @Model.CourseName</h5>
            <p id="courseType">Loại khóa học: @Model.CourseType</p>
            <p id="surveyType">Loại khảo sát: @Model.SurveyType</p>
            <p id="participantCount">Số người tham gia khảo sát: @Model.TotalParticipants</p>
        </div>
    </div>
    @if (Model.Questions != null && Model.Questions.Any())
    {
        foreach (var question in Model.Questions)
        {
            <div class="card mt-4">
                <div class="card-header">
                    <h3 class="card-title">@question.Order: @question.QuestionTitle</h3>
                </div>
                <div class="card-body">
                    @switch (question.Type.ToLower())
                    {
                        case "radio":
                        case "checkbox":
                        case "checkboxinput":
                            <div class="pie-chart" data-question="@Html.Raw(Json.Serialize(question))" style="width: 100%; height: 400px;"></div>
                            break;
                        case "star":
                            <div class="rating-bars" data-question="@Html.Raw(Json.Serialize(question))" data-type="star"></div>
                            break;
                        case "text":
                        case "input":
                        case "radioinput":
                            <table id="textResponseTable_@question.QuestionId" class="table table-bordered text-response-table survey-data-table">
                                <thead>
                                    <tr>
                                        <th>Đáp án</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var response in question.Responses)
                                    {
                                        <tr><td>@response.Value</td></tr>
                                    }
                                </tbody>
                            </table>
                            break;
                    }
                    @if (!string.IsNullOrEmpty(question.Statistics))
                    {
                        <p class="mt-3">Thống kê: @question.Statistics</p>
                    }
                </div>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info">Không có câu hỏi nào trong khảo sát này.</div>
    }
}
else
{
    <div class="alert alert-warning">Không có dữ liệu khảo sát.</div>
}