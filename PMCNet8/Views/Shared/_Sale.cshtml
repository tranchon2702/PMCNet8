@model SaleViewModel

<div id="saleDataContainer">
<div class="row">
    <div class="col-lg-3 col-6">
        <div class="small-box bg-success">
            <div class="inner">
                <p>Khách hàng</p>
                <h3>@Model.CustomerCount</h3>
            </div>
            <div class="icon">
                <i class="fas fa-book-reader"></i>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="small-box bg-info">
            <div class="inner">
                <p>Sản phẩm</p>
                <h3>@Model.ProductCount</h3>
            </div>
            <div class="icon">
                <i class="fas fa-user-graduate"></i>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="small-box bg-warning">
            <div class="inner">
                <p>Điểm thưởng</p>
                <h3>@Model.TotalAmount</h3>
            </div>
            <div class="icon">
                <i class="fas fa-certificate"></i>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-6">
        <div class="small-box bg-danger">
            <div class="inner">
                <p>Điểm/Sản phẩm</p>
                <h3>@Model.AveragePerProduct.ToString("N2")</h3>
            </div>
            <div class="icon">
                <i class="fas fa-chart-line"></i>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Chi tiết sản phẩm</h3>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Số điểm</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.SponsorProducts)
                {
                    <tr>
                        <td>@product.ProductName</td>
                        <td>@product.TotalScans</td>
                        <td>@product.TotalPoints</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>