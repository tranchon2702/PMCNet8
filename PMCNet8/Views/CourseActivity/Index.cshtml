@model List<CourseListItems>

@{
    ViewData["Title"] = "Hoạt động trên khóa học";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Hoạt động trên khóa học</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <div class="row align-items-end">
                    <div class="col-md-4">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Khóa học</span>
                            </div>
                            <select id="courseSelect" class="form-control">
                                @foreach (var course in Model)
                                {
                                    <option value="@course.Id">@course.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Từ ngày</span>
                            </div>
                            <input type="text" id="startDate" class="form-control flatpickr" placeholder="dd/mm/yyyy">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text">Đến ngày</span>
                            </div>
                            <input type="text" id="endDate" class="form-control flatpickr" placeholder="dd/mm/yyyy">
                            <div class="input-group-append">
                                <span class="input-group-text"><i class="fas fa-calendar-alt"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <button id="viewButton" class="btn btn-primary btn-block">Xem</button>
                    </div>
                </div>
            </div>
        </div>

        <div id="courseActivityContainer"></div>
    </div>
</section>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        $(document).ready(function () {
            initializePage();
            loadInitialData();
            $('#viewButton').click(function () {
                loadData(null, false);  // Pass false to use date range
            });
            $('#courseSelect').change(onCourseChange);
        });

        function initializePage() {
            $('#courseSelect').select2();
            initializeDatepickers();
        }

        function initializeDatepickers() {
            flatpickr(".flatpickr", {
                dateFormat: "d/m/Y",
                allowInput: true,
                locale: "vn"
            });
        }

        function loadInitialData() {
            var initialCourseId = '@ViewBag.FirstCourseId';
            if (initialCourseId) {
                loadData(initialCourseId, true);
            }
        }

        function onCourseChange() {
            // Reset date inputs when course changes
            $('#startDate').val('').trigger('change');
            $('#endDate').val('').trigger('change');

            // Reinitialize datepickers
            initializeDatepickers();

            // Load all data for the new course
            loadData($('#courseSelect').val(), true);

        }

        function loadData(courseId, isAllData = false) {
            courseId = courseId || $('#courseSelect').val();
            var startDate = $('#startDate').val();
            var endDate = $('#endDate').val();

            // Only use null dates if isAllData is true
            if (isAllData) {
                startDate = null;
                endDate = null;
            }

            console.log("Loading data for course:", courseId, "from", startDate, "to", endDate);

            $.ajax({
                url: '@Url.Action("GetCourseActivity", "CourseActivity")',
                type: 'GET',
                data: {
                    courseId: courseId,
                    startDate: startDate,
                    endDate: endDate
                },
                success: function (result) {
                    console.log("Received data from server");
                    $('#courseActivityContainer').html(result);
                    console.log("Partial view loaded");
                    initializeDataTables();
                    setupExportButtons();
                },
                error: function (error) {
                    console.error("Error loading data:", error);
                    alert('Có lỗi xảy ra khi tải dữ liệu. Vui lòng thử lại.');
                }
            });
        }
        
        function initializeDataTables() {
            $('#completedStudents').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
                "pageLength": 10,
                "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "Tất cả"]],
                "language": {
                    "lengthMenu": "Hiển thị _MENU_ dòng mỗi trang",
                    "zeroRecords": "Không tìm thấy dữ liệu",
                    "info": "Hiển thị trang _PAGE_ / _PAGES_",
                    "infoEmpty": "Không có dữ liệu",
                    "infoFiltered": "(lọc từ _MAX_ dòng)",
                    "search": "Tìm kiếm:",
                    "paginate": {
                        "first": "Đầu",
                        "last": "Cuối",
                        "next": "Tiếp",
                        "previous": "Trước"
                    }
                }
            });
        }

        function setupExportButtons() {
            // Implement export functionality here
            // For example:
            // $('#exportExcelBtn').click(function() {
            //     // Code to export data to Excel
            // });
            // $('#exportPdfBtn').click(function() {
            //     // Code to export data to PDF
            // });
        }
    </script>
}